<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MarkerApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Button
                x:Name="AddCourseBtn"
                Text="Add Course" 
                SemanticProperties.Hint="Switches to another view and prompts user for a new course"
                Clicked="AddCourseBtn_Clicked"
                HorizontalOptions="Fill" />

            <Button
                x:Name="AddStudentBtn"
                Text="Add Student" 
                SemanticProperties.Hint="Switches to another view and prompts user for a new student"
                Clicked="AddStudentBtn_Clicked"
                HorizontalOptions="Fill" />
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
